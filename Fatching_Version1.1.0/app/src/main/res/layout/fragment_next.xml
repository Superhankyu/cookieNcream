    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="4.1">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10sp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/bmjua_ttf"
                        android:textStyle="bold"
                        android:text="My item"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:drawableLeft="@drawable/arrow"
                        android:drawablePadding="5sp"

                        />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3.5"
                        >

                        <ImageView
                            android:id="@+id/uploadPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/fatching_purplesquare"
                            android:scaleType="fitXY"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="3.5">

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="top"
                                android:layout_marginTop="15sp"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="2.5"
                                android:src="@drawable/fatching_hanger" />

                            <TextView
                                android:id="@+id/textViewIfYou"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5sp"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/trebucbd"
                                android:gravity="center"
                                android:text="click below to\n upload my item"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"

                                />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="match_parent"
