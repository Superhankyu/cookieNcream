<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bmjua_ttf"
            android:gravity="center"
            android:shadowColor="@color/purple_500"
            android:shadowDx="10"
            android:shadowDy="10"
            android:text="Fatching"
            android:textColor="@color/purple_500"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="342dp"
            android:layout_height="146dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="#F0ECFF"
            android:drawableTop="@drawable/hanger_top"
            android:onClick="LoadImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/bmjua_ttf"
            android:text="Hang your clothes !"
            android:textColor="@color/purple_200"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:text="If you don't have pictures?\n  Or for advanced search"
            android:id="@+id/detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua_ttf"
            android:text="History"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:scrollbarThumbHorizontal="@color/purple_500">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxWidth="160dp"
                    android:maxHeight="200dp"
                    android:src="@drawable/square_clothes"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="-20dp"
                    android:id="@+id/his1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/square_clothes"
                    android:layout_marginLeft="100dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/square_clothes"
                    android:layout_marginLeft="220dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/square_clothes"
                    android:layout_marginLeft="340dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/square_clothes"
                    android:layout_marginLeft="460dp"/>
                <ImageButton
                    android:id="@+id/button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_next"
                    android:adjustViewBounds="true"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:background="#00000000"
                    android:layout_marginLeft="580dp"
                    android:layout_gravity="center_vertical"/>
            </FrameLayout>
        </HorizontalScrollView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="New Arrival"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="480dp"
            android:layout_gravity="center_horizontal"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/square_clothes"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/square_clothes"/>

            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="650dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/square_clothes"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/square_clothes"/>

            </TableRow>
        </TableLayout>

    </FrameLayout>

</ScrollView>


